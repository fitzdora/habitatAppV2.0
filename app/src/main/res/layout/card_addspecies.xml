<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="addSpecies"
            type="ie.setu.habitatappv20.models.AddSpeciesModel" />
    </data>
    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

        <RelativeLayout
            android:id="@+id/cardAddSpecies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="315dp"
                android:contentDescription="@string/change_species_image"
                app:srcCompat="@mipmap/ic_launcher_round" />


            <TextView
                android:id="@+id/titleText"
                android:layout_width="109dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="74dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="212dp"
                android:textAlignment="viewStart"
                android:textSize="30sp"
                tools:text="A Title" />

            <TextView
                android:id="@+id/habitatType"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/speciesDescription"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="78dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="221dp"
                android:textAlignment="viewStart"
                tools:text="Habitat Type" />

            <TextView
                android:id="@+id/speciesDescription"
                android:layout_width="105dp"
                android:layout_height="20dp"
                android:layout_below="@+id/titleText"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="77dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="213dp"
                android:textAlignment="viewStart"
                tools:text="A Description" />

            <TextView
                android:id="@+id/soilType"
                android:layout_width="82dp"
                android:layout_height="39dp"
                android:layout_alignStart="@+id/titleText"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="116dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="107dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/amountOfSpeciesSeen"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/soilType"
                android:layout_alignStart="@+id/habitatType"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="117dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="130dp"
                android:text="@{Integer.toString(addSpecies.totalSpecies)"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imagefavourite"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="315dp"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@android:drawable/star_big_off" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>