<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/speciesListFragment">

    <fragment
        android:id="@+id/speciesListFragment"
        android:name="ie.setu.habitatappv20.ui.listspecies.SpeciesListFragment"
        android:label="Species List"
        android:backgroundTint="@color/color_Secondary"
        tools:layout="@layout/fragment_specieslist" >
        <action
            android:id="@+id/action_speciesListFragment_to_addSpeciesFragment"
            app:destination="@id/addSpeciesFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_speciesListFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_speciesListFragment_to_speciesDetails"
            app:destination="@id/speciesDetails" />
    </fragment>
    <fragment
        android:id="@+id/addSpeciesFragment"
        android:name="ie.setu.habitatappv20.ui.addspecies.AddSpeciesFragment"
        android:label="Add Species"
        android:backgroundTint="@color/color_Secondary"
        tools:layout="@layout/fragment_addspecies" >
        <action
            android:id="@+id/action_addSpeciesFragment_to_speciesListFragment"
            app:destination="@id/speciesListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="ie.setu.habitatappv20.ui.about.AboutFragment"
        android:label="About Habitat App"
        android:backgroundTint="@color/color_Secondary"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_aboutFragment_to_addSpeciesFragment"
            app:destination="@id/addSpeciesFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/speciesDetails"
        android:name="ie.setu.habitatappv20.ui.detail.SpeciesDetailsFragment"
        android:label="Change Species Details"
        android:backgroundTint="@color/color_Secondary"
        tools:layout="@layout/fragment_speciesdetails" >
        <action
            android:id="@+id/action_speciesDetails_to_speciesListFragment"
            app:destination="@id/speciesListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <argument
            android:name="specieslistid"
            app:argType="long" />
    </fragment>
</navigation>