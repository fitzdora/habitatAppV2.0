<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/addSpeciesFragment">

    <fragment
        android:id="@+id/addSpeciesFragment"
        android:name="ie.setu.habitatappv20.fragments.AddSpeciesFragment"
        android:label="Add Species"
        tools:layout="@layout/fragment_addspecies" >
        <action
            android:id="@+id/action_addSpeciesFragment_to_speciesListFragment"
            app:destination="@id/speciesListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/speciesListFragment"
        android:name="ie.setu.habitatappv20.fragments.SpeciesListFragment"
        android:label="Species List"
        tools:layout="@layout/fragment_specieslist" >
        <action
            android:id="@+id/action_speciesListFragment_to_addSpeciesFragment4"
            app:destination="@id/addSpeciesFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_speciesListFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="ie.setu.habitatappv20.fragments.AboutFragment"
        android:label="About Habitat App"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_aboutFragment_to_addSpeciesFragment"
            app:destination="@id/addSpeciesFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
</navigation>