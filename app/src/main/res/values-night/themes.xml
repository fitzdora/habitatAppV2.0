<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HabitatAppV20" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Color -->
        <item name="colorPrimary">@color/color_Primary</item>
        <item name="colorPrimaryVariant">@color/color_Secondary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary Brand Color -->
        <item name="colorSecondary">@color/color_Secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Tertiary Brand Color -->
        <item name="colorOnTertiary">@color/color_Tertiary</item>
        <!-- status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- custom themes -->
        <item name="android:button">?attr/colorPrimaryVariant</item>
        <item name="android:background">@color/color_Background</item>
    </style>
</resources>